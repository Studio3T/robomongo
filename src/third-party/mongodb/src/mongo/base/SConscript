                     'status.cpp',
                     'string_data.cpp',
                     ],
                     LIBDEPS=[
                     '$BUILD_DIR/mongo/quick_exit',
                     '$BUILD_DIR/third_party/murmurhash3/murmurhash3',
                     ])

