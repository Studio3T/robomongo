#! /bin/sh

# Check for long lines
t=__wt.$$
trap 'rm -f $t; exit 0' 0 1 2 3 13 15

l=`(cd .. &&
    find bench/wtperf examples ext src test -name '*.[chisy]' &&
    find dist -name '*.py' &&
    find src -name '*.in') |
    sed -e '/include\/extern\.h/d'\
	-e '/support\/stat\.c/d'`

for f in $l ; do
	expand -t8 < ../$f | awk -- \
		"{if(length(\$0) > 80) printf(\"%s:%d\\n\", \"$f\", NR)}"
done
